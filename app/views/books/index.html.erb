<div class="container">
<p id="notice"><%= notice %></p>

<h1>Lista de Libros</h1>

<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :states_eq, "Buscar por Estado" %>
    <%= f.select :state_eq, options_for_select(Book.states, @q.state_eq) %>
    <%= f.submit "Buscar", class:"btn btn-outline-primary" %>  
  </div>
  
<% end %>

<table class="table">
  <thead class="thead-dark">
    <tr class="text-center">
      <th><%= sort_link(@q, :title) %></th>
      <th>Author</th>
      <th>State</th>
      <th>Borrowed at</th>
      <th>Return at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.state %></td>
        <td><%= book.borrowed_at %></td>
        <td><%= book.return_at %></td>
        <td><%= link_to 'Show', book, class:"btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class:"btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-dark btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>
<%= link_to 'Registrar Libro', new_book_path, class:"btn btn-outline-primary" %>
</div>